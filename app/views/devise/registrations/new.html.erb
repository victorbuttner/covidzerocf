
<div class="container" >
  <h2 class="text-center mt-5  pb-3">Faça seu cadastro</h2>
  <div class="row justify-content-center mt-3">
    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
      
          <div class="form-group">
            <%= f.label :name, 'Nome' %><br />
            <%= f.text_field :name, autofocus: true , class: 'form-control' , placeholder: 'Nome Completo'%>
          </div>
          
          <div class="form-group">
            <%= f.label :cpf, 'CPF' %><br />
            <%= f.text_field :cpf, autofocus: true , class: 'form-control' , placeholder: 'xxx.xxx.xxx-xx'%>
          
          </div>
          <div class="form-group">
            <%= f.label :phone, 'Telefone' %><br />
            <%= f.text_field :phone, autofocus: true , class: 'form-control' , placeholder: '(xx) xxxx-xxxx'%>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' , placeholder: 'Informe seu email'%>
          </div>
      
          <div class="form-group">
            <%= f.label :password, 'Senha' %>
            <% if @minimum_password_length %>
            <em>(mínimo de <%= @minimum_password_length %> caracteres )</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" , class: 'form-control' , placeholder: '******'  %>
          </div>
        
          <div class="form-group">
            <%= f.label :password_confirmation, 'Confirmação da senha' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'form-control', placeholder: '******'  %>
          </div>
        
          <div class="form-group text-center">
            <%= f.submit "Criar conta" , class: 'btn btn-success' %>
          </div>
        <% end %>      
      </div>
      <div class="card-footer" style="width: 100%;">
        <%= render "devise/shared/links" %>
      </div>

    </div>
    
  </div>
  
</div>
  
<script>
  $( document ).ready(function() {
  $("#user_birthdate").inputmask({"mask": "99/99/9999"});  
  })
  
</script>

