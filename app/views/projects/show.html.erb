<style>
    .page-header {
        background-image: url(<%=@project.banner_url%>);
        background-position: top;
        background-size: cover;
        background-repeat: no-repeat;
      }
    </style>
    
<section class="page-header">
    <div class="container pt-5">
        <div class="row ">
            <div class="col-12 text-center">
                <%= image_tag @project.photo.url, class: 'img-fluid ', style: 'max-width: 500px;' %>
                <h1 class="text-center pt-5 "><%=@project.name%></h1>
            </div>
        </div>
        <div class="container">
            <%= bootstrap_form_for [@project, Donation.new] do |f| %>
            <div class="row pt-4">
                <div class="col-sm-8 offset-sm-2">
                  <div class="input-group input-group-lg invest">
                    <div class="input-group-prepend" style="margin: 0 auto;">
                      <input type="button" value=" - " class="project_minusplus" onclick="decreaseValue()">
                      <input disabled type="text" value="R$" style="width: 80px; height: 100%; text-align: center;background-color: #fff;color: #989898;border: solid 1px black;border-radius:0;border-right:none;" class="money input-group-text" name="financing[quota_quantity]" id="financing_quota_quantity" />
                      <%= number_field(:donation, :value, class:'form-control text-right', style: 'border: solid 1px ;border-left:none;border-right:none;height:100%;border-radius:0', value:  @project.quota_value.to_i , id: 'donation-input') %>
                      <div class="input-group-append">
                        <span class="input-group-text" id="basic-addon1" style="border-radius:0;border: solid 1px black;border-left:none;border-right:none;">.000,00</span>
                        <input type="button" value=" + " class="project_minusplus" onclick="increaseValue()">
                        <%= f.submit 'DOAR AGORA', class: 'investWidget btn btn-primary d-none d-md-block d-lg-block' %>
                      </div>
                    </div>
                  </div>
                </div>
            </div>              
            <%end%>
        </div>
        <div class="container-fluid mt-5">
            <div class="row">
                <div class="col-12">
                    <div class="row justify-content-center">
                        <div class="col-lg-2 col-md-2 mb-4">
                            <div class="project-stats-card py-4 px-2 w-100 h-100 text-center" >
                              <h6>Rentabilidade anual equivalente</h6>
                              <h3>12%</h3>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 mb-4">
                            <div class="project-stats-card py-4 px-2 w-100 h-100 text-center">
                              <h6>Rentabilidade anual equivalente</h6>
                              <h3>12%</h3>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 mb-4">
                            <div class="project-stats-card-inverse py-4 px-2 w-100 h-100 text-center">
                              <h6>Rentabilidade anual equivalente</h6>
                              <h3>12%</h3>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 mb-4">
                            <div class="project-stats-card-inverse py-4 px-2 w-100 h-100 text-center">
                              <h6>Rentabilidade anual equivalente</h6>
                              <h3>12%</h3>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <h3 class="text-center">SOBRE O PROJETO</h3>
                <p><%=@project.about%></p>
            </div>
            <div class="col-sm-8">
                <iframe width="100%" height="390" src="<%= @project.video_url %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    
                <%= link_to 'QUERO DOAR', new_project_donation_path(@project), class:"btn btn-primary  d-lg-block mt-5" %>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    var input = document.getElementById('donation-input');
    function increaseValue(){
      input.value ++;
    }
    function decreaseValue(){
      if (input.value > 1){
        input.value -= 1;
      }
    }
</script>